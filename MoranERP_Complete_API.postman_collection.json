				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.access_token) {",
									"        pm.environment.set('auth_token', jsonData.access_token);",
									"        pm.collectionVariables.set('auth_token', jsonData.access_token);",
									"    }",
									"    if (jsonData.user_id) {",
									"        pm.environment.set('user_code', jsonData.user_id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{api_base_url}}/auth/login",
							"host": ["{{api_base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Login to get JWT access token. Automatically saves token to environment variables."
					}
				},
